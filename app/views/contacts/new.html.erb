<section class="page-section cta">
      <div class="container">
      	<%= form_for :contact, url: contacts_path do |f| %>
			<% if @contact && @contact.errors.any? %>
				<p>
					<ul>
						<% @contact.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>	
				</p>
			<% end %>
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <div class="cta-inner text-center rounded">
              <h2 class="section-heading mb-5">
                <span class="section-heading-upper">Come On</span>
                <span class="section-heading-lower">Contact Us</span>
              </h2>
            </div>
            <form name="sentMessage" id="contactForm" novalidate>
          		<div class="control-group">
            		<div class="form-group floating-label-form-group controls">
					<label>Name</label>
              			<%= f.text_field :name, class: "form-control", placeholder: "Name", id: "name" %>
              		<p class="help-block text-danger"></p>
            		</div>
          		</div>
		          <div class="control-group">
		            <div class="form-group floating-label-form-group controls">
		              <label>Email Address</label>
		              <%= f.text_field :email, class: "form-control", placeholder: "Email Address", id: "email" %>
		              <p class="help-block text-danger"></p>
		            </div>
		          </div>
		          <div class="control-group">
		            <div class="form-group floating-label-form-group controls">
		              <label>Message</label>
		              <%= f.text_area :message, textarea_rows: "5", class: "form-control", placeholder: "Message", id: "message" %>
		              <p class="help-block text-danger"></p>
		            </div>
		          </div>
		          <br>
		          <div id="success"></div>
		          <div class="form-group">
		            <%= f.submit 'Send Message', class: "btn btn-primary", id: "sendMessageButton" %>
		          </div>
		       </form>
          </div>
        </div>
      </div>
    </section>	
<% end %>