  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<section class="page-section cta">
      <div class="container">
      	<%= form_for :appointment, url: appointments_path do |f| %>
			<% if @appointment && @appointment.errors.any? %>
				<p>
					<ul>
						<% @appointment.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>	
				</p>
			<% end %>
        <div class="row">
          <div class="col-xl-9 mx-auto">
            <div class="cta-inner text-center rounded">
              <h2 class="section-heading mb-5">
                <span class="section-heading-upper">Please, enlist!</span>
                <span class="section-heading-lower">Visit to us!</span>
              </h2>
            </div>
            <form name="sentMessage" id="contactForm" novalidate>
          		<div class="control-group">
            		<div class="form-group floating-label-form-group controls">
					<label>Name</label>
              			<%= f.text_field :name, class: "form-control", placeholder: "Name", id: "name" %>
              		<p class="help-block text-danger"></p>
            		</div>
          		</div>
          		<div class="control-group">
            		<div class="form-group floating-label-form-group controls">
					<label>Phone</label>
              			<%= f.text_field :phone, class: "form-control", placeholder: "Phone", id: "name" %>
              		<p class="help-block text-danger"></p>
            		</div>
          		</div>
		          <div class="control-group">
		              <label>Barber</label><br>
		              <%= f.select(:barber, options_for_select(['Anybody', 'Lisa', 'Mona', 'Kate'])) %>	            
		          </div>
		           <div class="control-group">
            		<div class="form-group floating-label-form-group controls">
					<label>Datetime</label>
              			<%= f.text_field :datetime, class: "form-control", placeholder: "Date", id: "datepicker" %>
                      <script>
                        $( function() {
                          $( "#datepicker" ).datepicker();
                        } );
                      </script>
              		<p class="help-block text-danger"></p>
            		</div>
          		</div>
		          <br>
		          <div id="success"></div>
		          <div class="form-group">
		            <%= f.submit 'Enroll', class: "btn btn-primary", id: "sendMessageButton" %>
		          </div>
		       </form>
          </div>
        </div>
      </div>
    </section>	
<% end %>
